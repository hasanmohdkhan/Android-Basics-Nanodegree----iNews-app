<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BackgroundColor">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorAccent"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/thumnail"
                    android:scaleType="centerCrop"
                    tools:src="@color/colorAccent" />
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/card_image_margin"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/card_image_margin"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/card_image"
                android:layout_toRightOf="@+id/card_image"
                android:maxLines="3"
                android:textColor="@color/HeadingColor"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="US Open 2018, day one: Nadal, Serena and Murray through, Halep out â€“ as it happened" />


            <TextView
                android:id="@+id/section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading"
                android:layout_marginEnd="@dimen/card_image_margin"
                android:layout_marginLeft="@dimen/card_image_margin"
                android:layout_toEndOf="@id/card_image"
                android:layout_toRightOf="@id/card_image"
                android:layout_marginStart="@dimen/card_image_margin"
                android:textColor="@color/SectionColor"
                android:textStyle="bold"
                tools:text="Section" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/section"
                android:layout_marginEnd="@dimen/card_image_margin"
                android:layout_marginLeft="@dimen/card_image_margin"
                android:layout_toEndOf="@id/card_image"
                android:layout_toRightOf="@id/card_image"
                android:layout_marginStart="@dimen/card_image_margin"
                android:textColor="@color/TimeColor"
                android:textStyle="bold"
                tools:text="21 Augest 2017"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/authorImage"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/card_image_margin"
                android:layout_marginStart="@dimen/card_image_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/authorImage"
                android:layout_toRightOf="@+id/authorImage"
                android:textColor="@color/AuthorNameColor"
                android:textStyle="bold"
                tools:text="By Author Name" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/authorImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/card_image"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:elevation="1dp"
                tools:src="@color/colorAccent"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>